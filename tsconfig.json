{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true, // disable this if you don't want JS type-checking
		"declaration": true,
		"emitDeclarationOnly": true,
		"declarationDir": "dist/types",
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
